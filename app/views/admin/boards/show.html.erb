<% content_for(:title, t('.title')) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-3">
              <%= image_tag @board.board_image_url, width: "300", height: "200", class: "card-img-top img-fluid" %>
            </div>
            <div class="col-md-9">
              <h3 style="display: inline;"><%= "Title：#{@board.title}" %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= "by #{@board.user.name}" %></li>
                <li class="list-inline-item"><%= @board.created_at.strftime("%Y/%m/%d %H:%M") %></li>
              </ul>
                <%= "いいね数" %>
                <%= @board.likes.count %>
              </div>
            </div>
            <p><%= simple_format(@board.body) %></p>
          </div>
        </article>
          <div class="mb-3">
            <%= link_to "編集", edit_admin_board_path(@board), class: 'btn btn-outline-success float-right' %>
            <%= link_to "削除", admin_board_path(@board), data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') }, class: 'btn btn-outline-danger float-right' %>
          </div>
            <div class='mt-3 mb-3'>
            <%= link_to "掲示板管理画面へ戻る", admin_boards_path, class: 'btn btn-success float-end' %>
          </div>
      </div>
    </div>
  </div>
</div>
