<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1><%= t('.title') %></h1>
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :role, class: "form-label" %>
          <%= f.select :role, User.roles_i18n.map{|key, value| [value, key]}, { class: 'form-control mr-1' } %>
        </div>
        <div class="mb-3">
          <%= f.label :image %>
          <%= f.file_field :image, class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :image_cache %>
          <div class='mt-3 mb-3'>
            <%= image_tag @user.image.url,
                          class: 'rounded-circle',
                          id: 'preview',
                          size: '100x100' %>
          </div>
        </div>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
        <div class='mt-3 mb-3'>
          <%= link_to "ユーザー管理画面へ戻る", admin_users_path, class: 'btn btn-success float-end' %>
        </div>
    </div>
  </div>
</div>
