<% content_for(:title, t('.title')) %>
<div class="container">
<script src="https://accounts.google.com/gsi/client" async defer></script>
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <!-- ページタイトル -->
      <h1><%= t('.title') %></h1>
      <!-- ログインフォーム -->
      <!-- `form_with` を使用し、`login_path` に対してデータを送信するフォームを作成 -->
      <%= form_with url: login_path, method: :post, local: true, data: { turbo: false } do |f| %>
        <!-- メールアドレス入力欄 -->
        <div class="mb-3">
          <!-- メールアドレスのラベル -->
          <%= f.label :email %>
          <!-- メールアドレスの入力フィールド -->
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <!-- パスワード入力欄 -->
        <div class="mb-3">
          <!-- パスワードのラベル -->
          <%= f.label :password %>
          <!-- パスワードの入力フィールド -->
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <!-- ログインボタン -->
        <%= f.submit "ログイン", class: "btn btn-primary" %>
        <%= check_box_tag :remember, params[:remember], true %>
        <%= label_tag :remember, 'ログイン状態を保持する' %>
        <!--googleログイン -->
        <div class="mb-3">
          <div id="g_id_onload"
            data-client_id="811707880125-2sm1k1amvipajslkhgrgnr5aet02ta68.apps.googleusercontent.com"
            data-login_uri="http://localhost:3000/google_login_api/callback"
            data-auto_prompt="false">
          </div>
          <div class="g_id_signin"
            data-type="standard"
            data-size="large"
            data-theme="outline"
            data-text="sign_in_with"
            data-shape="rectangular"
            data-logo_alignment="left">
          </div>
        </div>
      <% end %>
      <!-- 追加のリンク（新規登録ページ） -->
      <div class='text-center'>
        <%= link_to '登録ページへ', new_user_path %>
        <!--  link_to 'パスワードを忘れた方', new_password_reset_path  -->
      </div>
    </div>
  </div>
</div>
