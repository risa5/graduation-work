<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <!-- ページタイトル -->
      <h1><%= t('.title') %></h1>
      <!-- ログインフォーム -->
      <!-- `form_with` を使用し、`login_path` に対してデータを送信するフォームを作成 -->
      <%= form_with url: login_path, method: :post, local: true, data: { turbo: false } do |f| %>
        <!-- メールアドレス入力欄 -->
        <div class="mb-3">
          <!-- メールアドレスのラベル -->
          <%= f.label :email %>
          <!-- メールアドレスの入力フィールド -->
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <!-- パスワード入力欄 -->
        <div class="mb-3">
          <!-- パスワードのラベル -->
          <%= f.label :password %>
          <!-- パスワードの入力フィールド -->
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <!-- ログインボタン -->
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
      <!-- 追加のリンク（新規登録ページ） -->
      <div class='text-center'>
        <%= link_to '登録ページへ', new_user_path %>
         <%= link_to 'パスワードを忘れた方', new_password_reset_path %>
      </div>
    </div>
  </div>
</div>
